<h1>Login</h1>

{{#if error}}
<p>Error: {{error}}</p>
{{/if}}

<form action="/login" method="POST">
  <div>
    <label>Email</label>
    <input type="email" name="email">
  </div>
  <div>
    <label>Password</label>
    <input type="password" name="password">
  </div>
  <input type="submit" value="Login">
</form>